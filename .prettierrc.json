{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 80,
  "quoteProps": "as-needed",
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "overrides": [
    {
      "files": ["**/*.css", "**/*.scss", "**/*.htm", "**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
